using System;
using System.Collections.Generic;

namespace AntDesigner.NetCore.GameCity
{
    public interface IInningeGame
    {/// <summary>
    /// 能否加座位检查
    /// </summary>
        Func<IInningeGame, bool> DCheckAddSeat { get; set; }
        /// <summary>
        /// 能否启动游戏检查
        /// </summary>
        Func<IInningeGame, bool> DCheckStart { get; set; }
        /// <summary>
        /// 一种游戏
        /// </summary>
        IGameProject IGameProject { get; set; }
        /// <summary>
        /// 游戏开始了?
        /// </summary>
        bool IsStarted { get; }
        /// <summary>
        /// 座位数量
        /// </summary>
        int SeatCount { get; }
        /// <summary>
        /// 一局游戏的公共数据
        /// </summary>
        Dictionary<string, List<string>> GameDate { get; set; }
        /// <summary>
        /// 添加座位后事件
        /// </summary>
        event EventHandler AfterAddSeatHandler;
        /// <summary>
        /// 添加座位前事件
        /// </summary>
        event EventHandler BeforAddSeatHandler;
        /// <summary>
        /// 启动游戏前事件
        /// </summary>
        event EventHandler BeforGameStartHandler;
        /// <summary>
        /// 游戏启动事件
        /// </summary>
        event EventHandler GameStartHandler;
        /// <summary>
        /// 添加空座位
        /// </summary>
        /// <param name="n">数量(不能为0和大于游戏人数上限)</param>
        /// <returns></returns>
        bool AddSet(int n);
        /// <summary>
        /// 没有玩家的座位集合
        /// </summary>
        /// <returns></returns>
        List<ISeat> EmptySeats();
        /// <summary>
        /// 获得一个空座位
        /// </summary>
        /// <returns></returns>
        ISeat GetOneEmptySeat();
        /// <summary>
        /// 游戏开始了吗?
        /// </summary>
        /// <returns></returns>
        bool Start();
    }
}