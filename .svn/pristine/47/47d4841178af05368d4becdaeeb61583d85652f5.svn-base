            Room.AddPlayerSuccessEvent += delegate { raisEvent = true; };
            Mock<IPlayerJoinRoom> IPlayerFactory2 = new Mock<IPlayerJoinRoom>();
            IPlayerFactory2.Setup(pp => pp.DecutMoney(0)).Returns(true);
